<div class="container">
  <h1>Список игроков</h1>

  <table>
    <tr>
      <th>Имя</th>
      <th></th>
    </tr>

    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= link_to 'Статистика', player_path(player) %></td>
        <td><%= link_to_if current_user.admin?, 'Удалить', player_path(player),
                method: :delete,
                data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </table>

  <br></br>

  <%= link_to 'Новый игрок', new_player_path %>
  <%= link_to 'Назад', welcome_index_path %>
</div>
