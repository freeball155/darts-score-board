<div class="container">
    <table class="table table-striped table-sm">
      <thead class="thead-dark">
        <tr>
          <th>#</th>
          <th>игрок</th>
          <th>бросок</th>
        </tr>
      </thead>
      <tbody >
        <% moves = Play.where(game_id: @game.id) %>
        <% moves.each do |move| %>
          <tr>
            <td><%= move.turn %></td>
            <% player = Player.find(move.player) %>
            <td><%= player.name %></td>
            <td><%= move.dart1 + ',' + move.dart2 + ',' + move.dart3 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
