<p id="notice"><%= notice %></p>

<h1>Plays</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Set</th>
      <th>Leg</th>
      <th>Turn</th>
      <th>Player</th>
      <th>1dart</th>
      <th>2dart</th>
      <th>3dart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= play.game_id %></td>
        <td><%= play.set %></td>
        <td><%= play.leg %></td>
        <td><%= play.turn %></td>
        <td><%= play.player %></td>
        <td><%= play.1dart %></td>
        <td><%= play.2dart %></td>
        <td><%= play.3dart %></td>
        <td><%= link_to 'Show', play %></td>
        <td><%= link_to 'Edit', edit_play_path(play) %></td>
        <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

